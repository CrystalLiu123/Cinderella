<script>
    function fixSize() {
        var spans = $(".pics span");
        var imgs = $(".pics img");
        var windowWidth = imgs.width();
        var rootSize = windowWidth / 30;
        var rootLine = rootSize + 20;
        var topHeight = parseInt((imgs.height()-4*rootLine)/2);
        console.log(topHeight);
        spans.css("font-size",rootSize+"px");
        spans.css("line-height",rootLine+"px");
        $(".pics").hover(function () {
            $(this).find("span").css("padding-top",topHeight+"px");
        }, function () {
            if($(window).width()>768){
                $(this).find("span").css("padding-top",0);
            }
        });
        if($(window).width()<=768){
            spans.css("padding-top",topHeight+"px");
        }
    }
    $(window).load(function() {
        fixSize();
        window.addEventListener('resize', fixSize, false);
    });
